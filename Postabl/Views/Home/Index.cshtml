@model Models.ViewModels.PublicFeedVM

@{
    ViewData["Title"] = "Feed";
}
@using System.Net

<h1 class="mb-4">Public Feed</h1>

<div class="d-flex flex-column">
    @if (Model != null && Model.Posts != null && Model.Posts.Any())
    {
        @foreach (var item in Model.Posts)
        {
            <article class="card mb-3 shadow-sm">
                <div class="card-body d-flex gap-3">
                    <!-- profile-image link to route to the view profile action -->
                    <a asp-area="User" asp-controller="Profile" asp-action="ViewPublicProfile" asp-route-id="@item.Profile.Id">
                        <img src="@(string.IsNullOrWhiteSpace(item.ProfileImageUrl) ? "/images/placeholder-profile.png" : item.ProfileImageUrl)"
                             alt="avatar"
                             class="rounded-circle"
                             style="width:56px;height:56px;object-fit:cover;" />
                    </a>

                    <div class="flex-grow-1 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@item.Post.Title</h5>
                                <small class="text-muted">@item.Profile.DisplayName • @item.Post.PublishedDate.ToString("MMM d, yyyy")</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">@((item.Post.IsPublic) ? "Public" : "Followers only")</small>
                            </div>
                        </div>

                        <!-- Truncated excerpt with ellipsis when content > 500 chars -->
                        <p class="card-text mb-3 post-excerpt">
                            @{
                                var content = item.Post.Content ?? string.Empty;
                                if (content.Length > 500)
                                {
                                    @Html.Raw(Html.Encode(content.Substring(0, 500)) + "…")
                                }
                                else
                                {
                                    @Html.Raw(Html.Encode(content))
                                }
                            }
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <div class="d-flex gap-2 align-items-center">
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                    <form asp-area="User" asp-controller="BlogPost" asp-action="Like" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Post.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Like">❤️ @item.Post.Likes</button>
                                    </form>
                                    @if (!string.IsNullOrWhiteSpace(item.LikedByDisplay))
                                    {
                                        <small class="text-muted">Liked by @item.LikedByDisplay</small>
                                    }
                                }
                                else
                                {
                                    var returnUrl = (Context.Request.Path + Context.Request.QueryString).ToString();
                                    <a class="btn btn-sm btn-outline-secondary" title="Sign in to like"
                                       href="@( $"/Identity/Account/Login?returnUrl={WebUtility.UrlEncode(returnUrl)}" )">
                                        ❤️ @item.Post.Likes
                                    </a>
                                }
                            </div>
                            <a asp-area="User" asp-controller="BlogPost" asp-action="ViewPost" asp-route-id="@item.Post.Id" class="btn btn-sm btn-primary">Read</a>
                        </div>
                    </div>
                </div>
            </article>
        }
    }
    else
    {
        <div class="alert alert-secondary mb-0">No public posts found.</div>
    }
</div>
