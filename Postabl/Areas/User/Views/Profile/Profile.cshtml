@model Models.ViewModels.UserProfileVM

@{
    ViewData["Title"] = "Profile";
    string photoUrl = string.IsNullOrWhiteSpace(Model?.Profile?.ProfileImageUrl) ? "/images/placeholder-profile.png" : Model.Profile.ProfileImageUrl;
    string coverUrl = string.IsNullOrWhiteSpace(Model?.Profile?.CoverImageUrl) ? "/images/placeholder-cover.jpg" : Model.Profile.CoverImageUrl;
}


<!-- Anti-forgery token (read by JS) -->
<form id="afForm" style="display:none">@Html.AntiForgeryToken()</form>

<!-- Page header / cover with overlay upload -->
<div id="coverDiv" class="profile-cover mb-3 cover-wrapper" style="background-image: url('@coverUrl'); background-size: cover; background-position: center; height:180px;">
    <div class="cover-overlay">
        <button id="coverUploadBtn" type="button" class="overlay-btn btn btn-sm">Change cover</button>
    </div>
    <input id="coverInput" type="file" accept="image/*" style="display:none" />
</div>

<div class="container">
    <div class="row">
        <!-- MOBILE: collapsible profile info -->
        <div class="col-12 d-md-none mb-3">
            <div class="d-flex align-items-center">
                <img src="@photoUrl" alt="Profile photo" class="rounded-circle me-3" style="width:72px;height:72px;object-fit:cover;">
                <div>
                    <h4 class="mb-0">@Html.DisplayFor(m => m.Profile.DisplayName)</h4>
                    <small class="text-muted">@Html.DisplayFor(m => m.Profile.Bio)</small>
                </div>
            </div>

            <button class="btn btn-outline-secondary w-100 mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#profileCollapse" aria-expanded="false" aria-controls="profileCollapse">
                View profile details
            </button>

            <div class="collapse mt-3" id="profileCollapse">
                <div class="card">
                    <div class="card-body">
                        <p class="mb-2">@Html.DisplayFor(m => m.Profile.Bio)</p>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model?.Profile?.Id" class="btn btn-primary btn-sm">Edit Profile</a>
                            @* <a asp-action="Index">Back to List</a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- DESKTOP: left pane profile -->
        <aside class="col-md-4 d-none d-md-block">
            <div class="card sticky-top" style="top:1rem;">
                <div class="card-body text-center">
                    <div class="image-wrapper">
                        <img id="profilePhoto" src="@photoUrl" alt="Profile photo" class="rounded-circle mb-3" style="width:140px;height:140px;object-fit:cover;">
                        <div class="image-overlay">
                            <button id="profileUploadBtn" type="button" class="overlay-btn btn btn-sm">Change</button>
                        </div>
                        <input id="profileInput" type="file" accept="image/*" style="display:none" />
                    </div>

                    <h4 class="card-title mb-1">@Html.DisplayFor(m => m.Profile.DisplayName)</h4>
                    <p class="text-muted mb-2">@Html.DisplayFor(m => m.Profile.Bio)</p>

                    <div class="d-grid">
                        <a asp-area="User" asp-controller="Profile" asp-action="Edit" asp-route-id="@Model?.Profile?.Id" class="btn btn-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Right pane: posts -->
        <main class="col-12 col-md-8">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h3 class="mb-0">Posts</h3>
                @* <small class="text-muted">@Model?.BlogPostList?.Count() posts</small> *@
                <a asp-area="User" asp-controller="BlogPost" asp-action="Create" class="btn btn-sm btn-primary">New Post</a>
            </div>


            <!-- TODO Quick post form -->
            <div class="card mb-3">
                <div class="card-body">
                    <form asp-area="User" asp-controller="BlogPost" asp-action="QuickPost" method="post" class="row g-2">
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <textarea name="content" class="form-control form-control-lg" rows="5" placeholder="Share something..."></textarea>
                        </div>
                        <div class="col-12 d-flex justify-content-between align-items-center">
                            <div class="form-check form-switch d-flex align-items-center">
                                <input class="form-check-input" type="checkbox" role="switch" id="IsPublic" name="isPublic" value="true" checked />
                                <label class="form-check-label ms-2" for="IsPublic">Make post public</label>
                            </div>

                            <div>
                                <button type="submit" class="btn btn-primary">QuickPost</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div> 



                <div class="row g-3">
@*                     <div class="d-grid">
                        <a asp-area="User" asp-controller="BlogPost" asp-action="Create" class="btn btn-sm btn-primary">New Post</a>
                    </div> *@
                @if (Model.BlogPostList != null && Model.BlogPostList.Any())
                {
                    @foreach (var post in Model.BlogPostList)
                    {
                        <div class="col-12 col-sm-6">
                            <div class="card h-100">
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-2">
                                        <h5 class="card-title mb-1">@post.Title</h5>
                                        <small class="text-muted">@post.PublishedDate.ToString("yyyy-MM-dd")</small>
                                    </div>
                                    <p class="card-text flex-grow-1">@((post.Content?.Length > 200) ? post.Content.Substring(0, 200) + "…" : post.Content)</p>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <form asp-area="User" asp-controller="BlogPost" asp-action="Like" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@post.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary" title="Like">❤️ @post.Likes</button>
                                            @* repost button here *@
                                        </form>
                                        <a class="btn btn-sm btn-outline-primary" asp-controller="BlogPost" asp-action="Details" asp-route-id="@post.Id">Read</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                
                }
                    else
                    {
                        <div class="alert alert-secondary">No posts found.</div>
                    }
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const profileId = '@Model?.Profile?.Id';
            if (!profileId) return;

            const afTokenInput = document.querySelector('#afForm input[name="__RequestVerificationToken"]');
            const token = afTokenInput ? afTokenInput.value : null;

            function sendFile(url, file, successCb, errorCb) {
                const fd = new FormData();
                fd.append('file', file);
                if (token) fd.append('__RequestVerificationToken', token);

                fetch(url, {
                    method: 'POST',
                    body: fd
                })
                .then(r => r.json())
                .then(json => {
                    if (json && json.success) successCb(json.url);
                    else errorCb(json && json.error ? json.error : 'Upload failed');
                })
                .catch(err => errorCb(err && err.message ? err.message : 'Network error'));
            }

            // Profile photo handlers
            const profileBtn = document.getElementById('profileUploadBtn');
            const profileInput = document.getElementById('profileInput');
            const profileImg = document.getElementById('profilePhoto');
            if (profileBtn && profileInput && profileImg) {
                profileBtn.addEventListener('click', () => profileInput.click());
                profileInput.addEventListener('change', () => {
                    const file = profileInput.files[0];
                    if (!file) return;
                    const url = '@Url.Action("UploadProfileImage", "Profile", new { area = "User" })' + '?id=' + profileId;
                    sendFile(url, file, (newUrl) => {
                        profileImg.src = newUrl;
                    }, (err) => alert('Upload error: ' + err));
                });
            }

            // Cover photo handlers
            const coverBtn = document.getElementById('coverUploadBtn');
            const coverInput = document.getElementById('coverInput');
            const coverDiv = document.getElementById('coverDiv');
            if (coverBtn && coverInput && coverDiv) {
                coverBtn.addEventListener('click', () => coverInput.click());
                coverInput.addEventListener('change', () => {
                    const file = coverInput.files[0];
                    if (!file) return;
                    const url = '@Url.Action("UploadCoverImage", "Profile", new { area = "User" })' + '?id=' + profileId;
                    sendFile(url, file, (newUrl) => {
                        coverDiv.style.backgroundImage = 'url(' + newUrl + ')';
                    }, (err) => alert('Upload error: ' + err));
                });
            }
        })();
    </script>
}